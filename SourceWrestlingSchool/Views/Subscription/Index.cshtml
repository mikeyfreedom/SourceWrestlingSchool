@model SourceWrestlingSchool.Models.SubscriptionViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/MemberPlans.css" rel="stylesheet" />

@if (TempData["message"] != null)
{
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h4><i class="icon fa fa-ban"></i> Congratulations!</h4>
        Your membership request has been accepted and a new subscription has been created.<br/>
        The details of the agreement are listed below.
    </div>
}

<h2>Index</h2>
@if (Model.IsSubscribed == true)
{
    <div class="container">
        <h4>SubscriptionViewModel</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.IsSubscribed)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsSubscribed)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SubscriptionID)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SubscriptionID)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LastPaymentDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LastPaymentDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NextDueDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NextDueDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Username)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Username)
            </dd>

        </dl>
    </div>
}
else
{
    <div class="container">
        <section class="section">
        <div class="section-headlines text-center">
            <h2>Set up Membership Plan</h2>
            <p>Select which plan best suits your needs.</p>
        </div>
        <div class="row-fluid">
            <div class="pricing-table row-fluid text-center">
                <div class="span3">
                    <div class="plan">
                        <div class="plan-name">
                            <h2>Bronze</h2>
                            <p class="muted">Basic membership</p>
                        </div>
                        <div class="plan-price">
                            <b>£40</b> / month
                        </div>
                        <div class="plan-details">
                            <div>
                                <b>Unlimited</b> Group Classes
                            </div>                            
                            <div>
                                <b>Supplementary</b> Special Seminars
                            </div>
                            <div>
                                <b>Supplementary</b> Private Classes
                            </div>
                            <div>
                                <b>25% off</b> Live Event Tickets
                            </div>
                        </div>
                        <div class="plan-action">
                            <a href="@Url.Action("CreateSubscription", "Subscription", new { id = 1 })" class="btn btn-block btn-large">
                                <span>Choose Plan</span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="span3">
                    <div class="plan prefered">
                        <div class="plan-name">
                            <h2>Silver</h2>
                            <p class="muted">Intermediate Membership</p>
                        </div>
                        <div class="plan-price">
                            <b>£55</b> / month
                        </div>
                        <div class="plan-details">
                            <div>
                                <b>Unlimited</b> Group Classes
                            </div>
                            <div>
                                <b>Free</b> Private Class / month
                            </div>
                            <div>
                                <b>20% off</b> Special Seminars
                            </div>
                            <div>
                                <b>25% off</b> Live Event Tickets
                            </div>
                        </div>
                        <div class="plan-action">
                            <a href="@Url.Action("CreateSubscription", "Subscription", new { id = 2 })" class="btn btn-block btn-large">
                                <span>Choose Plan</span>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="span3">
                    <div class="plan">
                        <div class="plan-name">
                            <h2>Gold</h2>
                            <p class="muted">Full-featured Membership</p>
                        </div>
                        <div class="plan-price">
                            <b>£70</b> / month
                        </div>
                        <div class="plan-details">
                            <div>
                                <b>Unlimited</b> Group Classes
                            </div>
                            <div>
                                <b>Free</b> Private Class / month
                            </div>
                            <div>
                                <b>Access</b> To Gym Facilities
                            </div>
                            <div>
                                <b>25% off</b> Private Classes
                            </div>
                            <div>
                                <b>25% off</b> Special Seminars
                            </div>
                            <div>
                                <b>25% off</b> Live Event Tickets
                            </div>
                        </div>
                        <div class="plan-action">
                            <a href="@Url.Action("CreateSubscription", "Subscription", new { id = 3 })" class="btn btn-block btn-large">
                                <span>Choose Plan</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    </div>  
}


