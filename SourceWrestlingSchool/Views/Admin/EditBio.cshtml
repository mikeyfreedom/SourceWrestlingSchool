@model string
@{
    ViewBag.Title = "EditBio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Menu {
    @Scripts.Render("~/Scripts/Forms/Editors/menu")
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-info">
            <div class="box-header">
                <h3 class="box-title">
                    Edit Your Bio Information
                </h3>
                <div class="pull-right box-tools">
                    <button type="button" class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body pad">
                <form method="post" action="/Admin/EditBio">
                    <textarea id="editor1" name="editor1" rows="10" cols="80">
                        @Model
                    </textarea>
                    <input type="hidden" name="profileID" value="@Html.Raw(ViewBag.Id)">
                    <input class="btn btn-success" type="submit" value="Update Bio" />
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/AdminLTE/plugins/ckeditor/js")
    @Scripts.Render("~/Scripts/Forms/Editors")
}

